pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Environment Check') {
            steps {
                sh '''
                  echo "Running on Jenkins"
                  uname -a
                  whoami
                '''
            }
        }

        stage('Dummy Build') {
            steps {
                sh 'echo "CI pipeline is working"'
            }
        }

        stage('Docker Sanity Check') {
            steps {
                sh 'docker --version'
                sh 'docker images'
            }
        }
    }
}
